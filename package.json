{
  "name": "Snipets",
  "version": "0.1.0",
  "description": "Менеджер сниппетов кода",
  "author": "Developer",
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hot-toast": "^2.6.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && node copy-electron.js",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "set NODE_ENV=development && electron .",
    "dev": "npm run build && npx electron electron/main.js",
    "start-electron": "node start-electron.js",
    "dev-full": "node start-dev.js",
    "electron-react": "start /B npm start && timeout /t 5 /nobreak >nul && npx electron electron/main.js",
    "electron-pack": "npm run build && electron .",
    "preelectron-pack": "npm run build",
    "dist": "npm run build && electron-builder",
    "dist-win": "npm run build && electron-builder --win",
    "pack": "npm run build && electron-builder --dir",
    "pack-dev": "npm run build && electron-builder --dir --config.asar=false",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "autoprefixer": "^10.4.21",
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.29.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18"
  },
  "build": {
    "appId": "com.snipets.app",
    "productName": "Snipets",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "build/",
        "to": "build/"
      }
    ],
    "asar": true,
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
